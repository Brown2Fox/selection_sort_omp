WORK_DIR=.build
OUT_DIR=.

gen:
	cd $(WORK_DIR) && ./gendata -o $(OUT_DIR)/data.txt -n 100000

sort:
	cd $(WORK_DIR) && time -f '(%e)' ./ssort -i $(OUT_DIR)/data.txt -o $(OUT_DIR)/sorted_data.txt -v

sort2:
	cd $(WORK_DIR) && time -f '(%e)' ./ssort2 -i $(OUT_DIR)/data.txt -o $(OUT_DIR)/sorted_data.txt -v

sort3:
	cd $(WORK_DIR) && time -f '(%e)' ./ssort3 -i $(OUT_DIR)/data.txt -o $(OUT_DIR)/sorted_data.txt -v