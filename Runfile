WORK_DIR=.build
OUT_DIR=.

sorts: np npi 

gen:
	cd $(WORK_DIR) && ./gendata -o $(OUT_DIR)/data.txt -n$(N)

np:
	cd $(WORK_DIR) && time -f '(%e)' ./ssort_np -i $(OUT_DIR)/data.txt -o $(OUT_DIR)/sorted_data.txt -v -j$(J)

npi:
	cd $(WORK_DIR) && time -f '(%e)' ./ssort_npi -i $(OUT_DIR)/data.txt -o $(OUT_DIR)/sorted_data.txt -v -j$(J)
